1)	 LED Flashing


#include<reg51.h> 
 
void Delay(void);
 
void main (void) 
{
 while(1) 
 {
 		P2 = 0x55; 
 Delay();
 P2 = 0xAA; 
 Delay();
 }
}

void Delay(void)
{
 int j, i;
 for(i=0;i<10;i++)
 {
 for(j=0;j<10000;j++)
 				{
    }
 }
}









2) BCD Counter

#include<reg51.h> 
 
void Delay(void); 

void main (void) 
{
unsigned char count=0x00, x, d1,d2,d3;
 while(1) 
   {
x=count/10;
d1= count%10;
d2= x%10;
d3= x/10;
 			P1 = d1; 
P2= d2;
P3 = d3;
 			Delay();
count=count+1;
 }
}

void Delay(void)
{
 int i,j;
 		
 for(i=0;i<10;i++)
 {
 for(j=0;j<10000;j++)
 				{
 					}
 			}
}



3) Hex Counter 



#include<reg51.h> 
 
void Delay(void); 

void main (void) 
{
 unsigned char count=0x00;
 
 	while(1) 
 			{
 
 				P2 = count; 
Delay();
 				count= count+1;
 			}
}

void Delay(void)
{
int I,j;

for(i=0;i<10;i++)
 {
 for(j=0;j<10000;j++)
 {
 }
 			}
 
}
