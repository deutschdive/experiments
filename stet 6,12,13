Program:
1) Full drive Mode

#include<reg51.h>

void Delay(void)     //To create a delay of  (50 ms x 200 = 1 second ) using  Timer 1 and Mode 1
 {

unsigned int x;
for (x=0; x<200; x++)
{
TMOD=0x10;
TH1=0x4B;
TL1=0xFC;
TR1=1;
while (TF1==0);
TR1=0;
TF1=0;
}
} 

void main()
{
 while(1) // To repeat infinitely
 {
 P1=0x0C; 		//P1 = 0000 1100 First Step
 	Delay();
 P1=0x06; 		//P1 = 0000 0110 Second Step
 			Delay();
 		P1=0x03; 		//P1 = 0000 0011 Third Step
 	Delay();
 P1=0x09;		 //P1 = 0000 1001 Fourth Step
 	Delay();
 	}
}









2) Half Drive mode

#include<reg51.h>

void Delay(void)	 //To create a delay of  (50 ms x 200 = 1 second ) using  Timer 1 and Mode 1
 {
    unsigned int x;
for (x=0; x<200; x++)
{
TMOD=0x10;
TH1=0x4B;
TL1=0xFC;
TR1=1;
while (TF1==0);
TR1=0;
TF1=0;
}
} 


void main()
{
 while(1) // To repeat infinitely
 	{
 		P1=0x08; 		//P1 = 0000 1100 First Step
 			Delay();
 		P1=0x0C; 		//P1 = 0000 0110 Second Step
 	Delay();
 P1=0x04; 		//P1 = 0000 0011 Third Step
 	Delay();
 P1=0x06;		 //P1 = 0000 1001 Fourth Step
 			Delay();
 		P1=0x02; 		//P1 = 0000 1100 First Step
 	Delay();
 P1=0x03;		 //P1 = 0000 0110 Second Step
 	Delay();
 		P1=0x01; 		//P1 = 0000 0011 Third Step
 			Delay();
 P1=0x09;		 //P1 = 0000 1001 Fourth Step
 			Delay();
 }
}
